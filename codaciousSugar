                                         (total 5 classes and mainActivity)
                                           (MainActivity.java)
                                           package com.mad.sophiaajaz.sugarorm;

import android.content.Intent;
import android.support.v7.app.AppCompatActivity;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;

public class MainActivity extends AppCompatActivity {

    Button btnAdd, btnView;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        btnAdd = (Button) findViewById(R.id.btn_add_book);
        btnView = (Button) findViewById(R.id.btn_view_books);

        btnAdd.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View view) {
                Intent intent = new Intent(MainActivity.this,AddNewBookActivity.class);
                intent.putExtra("key","add");
                startActivity(intent);
            }
        });

        btnView.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View view) {
                Intent intent = new Intent(MainActivity.this,ViewAllBooksActivity.class);
                startActivity(intent);
            }
        });
    }
}

                                               (AddNewBookActivity.java)
                                               
          package com.mad.sophiaajaz.sugarorm;

import android.support.v7.app.AppCompatActivity;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;

public class AddNewBookActivity extends AppCompatActivity {
    EditText edTitle,edEdition;
    Button btnSubmit;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_add_new_book);

        initializeComponents();

        if(getIntent().getStringExtra("key").contentEquals("edit")){
            edTitle.setText(Helper.editableBOOK.title);
            edEdition.setText(Helper.editableBOOK.edition);

            btnSubmit.setText("UPDATE");
        }
    }

    private void initializeComponents(){
        edTitle = (EditText) findViewById(R.id.ed_title);
        edEdition = (EditText) findViewById(R.id.ed_edition);

        btnSubmit = (Button) findViewById(R.id.btn_submit);

        btnSubmit.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View view) {
                String title = edTitle.getText().toString();
                String edition = edEdition.getText().toString();


                if(getIntent().getStringExtra("key").contentEquals("edit")){
                    Book book = Book.findById(Book.class, Helper.editableBOOK.getId());
                    book.title = title; // modify the values
                    book.edition = edition;
                    book.save();
                }
                else{
                    Book book = new Book(title, edition);
                    book.save();
                }

                finish();
            }
        });
    }
}

                                               (Book.java)
                                               
  package com.mad.sophiaajaz.sugarorm;

import com.orm.SugarRecord;

public class Book extends SugarRecord<Book> {
    String title;
    String edition;

    public Book(){
    }

    public Book(String title, String edition){
        this.title = title;
        this.edition = edition;
    }
}
 
                                                      (BookAdapter.java)
                                               
     package com.mad.sophiaajaz.sugarorm;

import android.app.Activity;
import android.content.Context;
import android.content.Intent;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.widget.BaseAdapter;
import android.widget.TextView;
import android.widget.Toast;

import java.util.List;

public class BookAdapter extends BaseAdapter {

    Activity activity;
    Context context;
    List<Book> bookList;

    LayoutInflater layoutInflater;

    public BookAdapter(Activity activity, Context context, List<Book> bookList){
        this.context = context;
        this.activity = activity;
        this.bookList = bookList;

        layoutInflater = (LayoutInflater) context.getSystemService(Context.LAYOUT_INFLATER_SERVICE);
    }

    @Override
    public int getCount() {
        return bookList.size();
    }

    @Override
    public Object getItem(int i) {
        return bookList.get(i);
    }

    @Override
    public long getItemId(int i) {
        return i;
    }

    @Override
    public View getView(int i, View view, ViewGroup viewGroup) {

        View itemView = layoutInflater.inflate(R.layout.item_book,null);
        TextView txtTitle = (TextView) itemView.findViewById(R.id.title);
        TextView txtEdition = (TextView) itemView.findViewById(R.id.edition);
        TextView btnEdit = (TextView) itemView.findViewById(R.id.btn_edit);
        TextView btnDelete = (TextView) itemView.findViewById(R.id.btn_delete);

        final Book book = bookList.get(i);

        txtTitle.setText(book.title);
        txtEdition.setText(book.edition);

        btnEdit.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View view) {
                Helper.editableBOOK = book;
                Intent intent = new Intent(context,AddNewBookActivity.class);
                intent.putExtra("key","edit");
                context.startActivity(intent);
                activity.finish();
                //Toast.makeText(context,"Edit Book ID: "+book.getId(),Toast.LENGTH_SHORT).show();
            }
        });

        btnDelete.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View view) {
                book.delete();
                activity.finish();
                //Toast.makeText(context,"Delete Book ID: "+book.getId(),Toast.LENGTH_SHORT).show();
            }
        });
        return itemView;
    }
}
                                          (Helper.java)
                
 package com.mad.sophiaajaz.sugarorm;

public class Helper {
    public static Book editableBOOK = null;
}

                                          (ViewAllBooksActivity.java)
                                          
package com.mad.sophiaajaz.sugarorm;

import android.support.v7.app.AppCompatActivity;
import android.os.Bundle;
import android.widget.ListView;

import java.util.List;

public class ViewAllBooksActivity extends AppCompatActivity {

    ListView listView;
    List<Book> dataSource;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_view_all_books);

        listView = (ListView) findViewById(R.id.list_books);

        dataSource = getAllBooks();
        BookAdapter adapter = new BookAdapter(this,this,dataSource);
        listView.setAdapter(adapter);
    }

    private List<Book> getAllBooks(){
        List<Book> books = Book.listAll(Book.class);
        return books;
    }
}
